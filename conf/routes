# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /logout                     controllers.Application.logout

GET     /prob                       controllers.Application.getProb
POST    /prob                       controllers.Application.postProb
GET     /addProb                    controllers.Application.getAddProb
POST    /addProb                    controllers.Application.postAddProb

GET     /someCall/:solution         controllers.Application.someCall(solution: String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Register
GET        /register                controllers.UserController.getRegister
POST       /register                controllers.UserController.postRegister
