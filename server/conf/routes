# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /logout                     controllers.Application.logout
POST    /stub                       controllers.Application.stub

GET     /tasks                      controllers.TaskSolver.tasks
GET     /task                       controllers.TaskSolver.getTask
GET     /task-stream                controllers.TaskSolver.taskStream

GET     /addTask                    controllers.NewTask.getAddTask
POST    /addTask                    controllers.NewTask.postNewTask

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Register
GET     /register                   controllers.UserController.getRegister
POST    /register                   controllers.UserController.postRegister
